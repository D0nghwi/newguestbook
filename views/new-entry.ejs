<% include header %>

<h2>Write a new entry</h2>

<form method="post" role="form">
  <div class="form-group">
    <label for="title">타이틀</label>
    <input type="text" class="form-control" id="title" name="title" placeholder="제목 입력" required>
  </div>
  <div class="form-group">
    <label for="body">후기를 작성하세요</label>
    <textarea class="form-control" id="body" name="body" placeholder="후기를 작성해주세요." rows="3" required></textarea>
  </div>
  <div class="form-group">
    <input type="submit" value="후기 등록" class="btn btn-primary">
  </div>
</form>

<% include footer %>
